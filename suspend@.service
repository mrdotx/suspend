[Unit]
Description=lock x session using i3_knockout for user %i
Before=sleep.target

[Service]
User=%i
Type=forking
Environment=DISPLAY=:0
# for xauthority file in system environment
Environment=XAUTHORITY=/run/user/1000/Xauthority
ExecStart=/home/klassiker/repos/i3/i3_knockout.sh -lock simple

[Install]
WantedBy=sleep.target
